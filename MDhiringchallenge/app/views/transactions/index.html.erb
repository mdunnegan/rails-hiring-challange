<table id="failed">
  <thead><h1>Failed Transactions</h1></thead>
  <tr>
    <th>Date Created</th>
    <th>Paid</th>
    <th>Amount</th>
    <th>Currency</th>
    <th>Refunded</th>
    <th>Customer Name</th>
  </tr>
    <% @failed_transactions.each do |transaction| %> 
      <tr class="failed_transaction">
        <td><%= transaction.created_at %></td>
        <td><%= transaction.paid %></td>
        <td><%= transaction.amount %></td>
        <td><%= transaction.currency %></td>
        <td><%= transaction.refunded %></td>
        <td><%= transaction.customer.full_name %></td>
        <!-- <td><%= Customer.find_by_id(transaction.customer_id).first_name%></td> -->
      </tr>
<% end %>
</table>
</br>

